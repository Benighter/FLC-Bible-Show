<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="FLC Bible Show"
                  location="applications"/>
    <shortcut
            name="FLC Bible Show"
            target="$INSTALL_PATH\FLCBibleShow.bat"
            description="Launch FLC Bible Show"
            workingDirectory="$INSTALL_PATH"
            iconFile="$INSTALL_PATH\icons\logo.ico"
            initialState="normal"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no">

        <createForPack name="base"/>
    </shortcut>

</shortcuts>